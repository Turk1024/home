[colors]
bar = #99000000
module = #333333
label = #eeeeee
label-secondary = #666666
prefix = #aaaaaa
alert = #ff9966

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 22
bottom = false
fixed-center = true
;override-redirect = true
;wm-restack = bspwm

background = ${colors.bar}
foreground = ${colors.label}

padding = 4
module-margin = 3

font-0 = Built Titling:style=Bold
font-1 = Symbols Nerd Font:style=2048-em
font-2 = JoyPixels:scale=10:antialias=true

tray-position = right
tray-padding = 2

modules-left = bspwm
modules-center = date weather
modules-right =  pacupdates temperature mem cpu pulseaudio time

cursor-click = pointer
cursor-scroll = ns-resize


[module/xwindow]
type = interal/xsindow
label = %title:0:30:...%


[module/bspwm]
type = internal/bspwm

pin-workspaces = true

label-focused = %index%
label-focused-background = ${colors.bar}
label-focused-foreground = ${colors.label}
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = ${colors.prefix}
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.label-secondary}
label-empty-padding = 2

[module/date]
type = internal/date
interval = 60

date = %B %e, %Y

format-prefix-foreground = ${colors.label}

label = %date%

[module/time]
type = internal/date
interval = 5

time = %I:%M %p

format-prefix-foreground = ${colors.label}

label = %time%

[module/pulseaudio]
type = internal/pulseaudio

